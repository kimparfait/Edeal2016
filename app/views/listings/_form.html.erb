

<%= form_for(@listing, :html => { :multipart => true }) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible">
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   <div class="form-group">
  <%= select_tag(:location_id,options_for_select(@locations), :prompt=>"select your location")%>
  </div>
  <div class="form-group">
<%= select_tag(:category_id,options_for_select(@categories), :prompt=>"select a category")%>
</div>
  <div class="form-group">

    <%= f.label :name %><br>
    <%= f.text_field :name , placeholder: "name", class: "form-control border-radius-small" %>
  </div>
<div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description ,  placeholder: "Item description",class: "form-control border-radius-small"%>
  </div>
 <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, placeholder: "Item price", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, placeholder: "Item image",class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_area :address, placeholder: "Address", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, placeholder: "Phone", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
