<div class="col-md-6 col-md-offset-3">

  <div class="edit-book-form">

<h1>Editing listing</h1>

<%= form_for(@listing, :html => { :multipart => true }) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible">
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  <%=f.select :location_id,@locations%>
  </div>
  <div class="form-group">
<%=f.select :category_id,@categories%>
</div>
  <div class="form-group">

    <%= f.label :name %><br>
    <%= f.text_field :name , placeholder: "name", class: "form-control" %>
  </div>
<div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description ,  placeholder: "Item description",class: "form-control"%>
  </div>
 <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, placeholder: "Item price", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, placeholder: "Item image",class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_area :address, placeholder: "Address", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, placeholder: "Phone", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>


<%= link_to 'Show', @listing, class: "btn btn-link"%> 
<%= link_to 'Back', listings_path, class: "btn btn-link" %>
</div>
</div>