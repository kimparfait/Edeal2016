<div class="center">
<h1 class="current-category" style="color:blue">Your sales </h1>
  
</div>

<table class = "table table-striped table-bordered table-hover">
<tr>
<th class = "center">Image</th>
    <th class = "center">Item</th>
    <th class = "center, info">Price</th>
    <th class = "center">customer</th>
    <th class = "center">Message</th>
    <th class = "center">Address</th>
    <th class = "center">Phone</th>
    <th class = "center">Date sold</th>
</tr>

 <% @orders.each do |order| %>
 <tr>
      <td><%= image_tag order.listing.image.url(:thumb) %></td>
      <td><%= order.listing.name %></td>
      
      <td ><%= number_to_currency(order.listing.price,:unit => "UGX") %></td>
      <td><%= order.buyer.name %></td>
      <td><%= order.message %></td>
      <td><%= order.address %></td>
      <td><%= order.number%></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
      
      </tr>




    <%end%>

    </table>



<br>
<% if user_signed_in? %>
  <%= link_to 'New Ad', new_listing_path, class: "btn btn-primary" %>   
<%end%>