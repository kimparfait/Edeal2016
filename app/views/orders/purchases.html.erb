<div class="center">
<h1>Your purchases history </h1>
  
</div>

<table class = "table table-striped table-bordered table-hover">
<tr>
<th class = "center">Image</th>
    <th class = "center">Item</th>
    <th class = "center, info">Price</th>
    <th class = "center">seller</th>
    <th class = "center">Date purchased</th>
</tr>

 <% @orders.each do |order| %>
 <tr>
      <td class = "center" ><%= image_tag order.listing.image.url(:thumb) %></td>
      <td class = "center"><%= order.listing.name %></td>
      
      <td class = "center"><%= number_to_currency(order.listing.price,:unit => "UGX") %></td>
      <td class = "center"><%= order.seller.name %></td>
      <td class = "center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
      
      </tr>




    <%end%>

    </table>



<br>
<% if user_signed_in? %>
  <%= link_to 'New Ad', new_listing_path, class: "btn btn-primary" %>   
<%end%>